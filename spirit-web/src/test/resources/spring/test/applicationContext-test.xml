<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="propertyResolver"
          class="com.googlecode.easyec.spirit.web.utils.PropertyResolver"
          p:locations="classpath*:conf/*.properties"
    />

    <bean id="objectMapper"
          class="com.fasterxml.jackson.databind.ObjectMapper"
    />
    <bean id="jsonObjectFactory"
          class="com.googlecode.easyec.spirit.web.webservice.factory.impl.DefaultJackson2ObjectFactory">
        <constructor-arg ref="objectMapper"/>
    </bean>
</beans>